<!-- 物流详情列表项 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dip" >

        <RelativeLayout
            android:id="@+id/rlayout_express_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip" >

            <TextView
                android:id="@+id/tvew_express_line_show"
                android:layout_width="1dip"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/gray" />

            <ImageView
                android:id="@+id/tvew_express_status_mark_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dip"
                android:background="@drawable/express_status_new" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvew_express_name_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/rlayout_express_line"
            android:text="商家商家正在打单商家正在打单打单"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_text" />

        <TextView
            android:id="@+id/tvew_express_time_show"
            style="@style/Text_Wrap_Gray_Text"
            android:layout_below="@+id/tvew_express_name_show"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/rlayout_express_line"
            android:text="2015-12-12" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="13dip"
            android:layout_toRightOf="@+id/rlayout_express_line"
            android:background="@color/gray_white" />
    </RelativeLayout>

</RelativeLayout>