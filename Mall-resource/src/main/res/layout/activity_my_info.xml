<!-- 个人资料 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <RelativeLayout
        android:id="@+id/rlayout_my_picture_click"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/common_write_btn_bg_selector" >

        <TextView
            style="@style/Btn_Wrap_Black_Text_Title3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:drawablePadding="8dip"
            android:text="头像" />

        <LinearLayout
            android:id="@+id/llayout_head_picture_click"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginRight="30dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/userheadimg"
            android:gravity="center" >

            <com.android.zcomponent.views.CircleImageView
                android:id="@+id/imgvew_head_picture_show"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
        </LinearLayout>

        <TextView
            
            style="@style/Text_Wrap_Gray_Text_Sm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawablePadding="8dip"
            android:drawableRight="@drawable/common_right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_my_nick_click"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/common_write_btn_bg_selector" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray" />

        <TextView
            style="@style/Btn_Wrap_Black_Text_Title3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:drawablePadding="8dip"
            android:text="昵称" />

        <TextView
            android:id="@+id/tvew_nickname_show"
            style="@style/Text_Wrap_Gray_Text_Sm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawablePadding="8dip"
            android:drawableRight="@drawable/common_right_arrow"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_my_sex_click"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/common_write_btn_bg_selector" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray" />

        <TextView
            style="@style/Btn_Wrap_Black_Text_Title3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:drawablePadding="8dip"
            android:text="性别" />

        <TextView
            android:id="@+id/tvew_my_sex_show"
            style="@style/Text_Wrap_Gray_Text_Sm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawablePadding="8dip"
            android:drawableRight="@drawable/common_right_arrow"
            android:text="女" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlayout_my_mingpian_click"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/common_write_btn_bg_selector" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray" />

        <TextView
            style="@style/Btn_Wrap_Black_Text_Title3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:drawablePadding="8dip"
            android:text="我的二维码名片" />

        <TextView
            style="@style/Text_Wrap_Gray_Text_Sm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawablePadding="8dip"
            android:drawableRight="@drawable/common_right_arrow"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_my_address_click"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/common_write_btn_bg_selector" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray" />

        <TextView
            style="@style/Btn_Wrap_Black_Text_Title3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:drawablePadding="8dip"
            android:text="我的地址" />

        <TextView
            style="@style/Text_Wrap_Gray_Text_Sm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawablePadding="8dip"
            android:drawableRight="@drawable/common_right_arrow"
            android:text="" />
    </RelativeLayout>

</LinearLayout>