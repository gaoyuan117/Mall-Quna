            <!-- 我的退款申请 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_layout"
        layout="@layout/common_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Text_Wrap_Black_Text"
                        android:layout_marginLeft="20dip"
                        android:layout_marginTop="10dip"
                        android:text="退款类型" />

                    <TextView
                        style="@style/Text_Wrap_Red_Text"
                        android:layout_marginTop="10dip"
                        android:text="*" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlayout_refund_money_click"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/refund_input_item_height"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/input_top_bg" >

                    <TextView
                        style="@style/EditText_Wrap_Black_Text"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:background="@null"
                        android:paddingLeft="15dip"
                        android:text="我要退款(无需退货)"
                        android:textCursorDrawable="@drawable/editvew_cursor_drawble" />

                    <ImageView
                        android:id="@+id/imgvew_refund_money_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/icon18" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:background="@color/gray_white" />

                <RelativeLayout
                    android:id="@+id/rlayout_refund_product_click"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/refund_input_item_height"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/input_bottom_bg" >

                    <TextView
                        style="@style/EditText_Wrap_Black_Text"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:background="@null"
                        android:paddingLeft="15dip"
                        android:text="我要退货"
                        android:textCursorDrawable="@drawable/editvew_cursor_drawble" />

                    <ImageView
                        android:id="@+id/imgvew_refund_product_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/icon18"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llayout_order_item_parent_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tvew_order_name_show"
                            style="@style/Text_Wrap_Black_Text"
                            android:layout_marginLeft="20dip"
                            android:text="选择商品" />

                        <TextView
                            style="@style/Text_Wrap_Red_Text"
                            android:text="*" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llayout_order_item"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/common_round_white_bg"
                        android:orientation="vertical"
                        android:padding="3dip" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Text_Wrap_Black_Text"
                        android:layout_marginLeft="20dip"
                        android:layout_marginTop="10dip"
                        android:text="退款原因" />

                    <TextView
                        style="@style/Text_Wrap_Red_Text"
                        android:layout_marginTop="10dip"
                        android:text="*" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/refund_input_item_height"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/input_edit_bg" >

                    <EditText
                        android:id="@+id/editvew_refund_reason_show"
                        style="@style/EditText_Wrap_Black_Text"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dip"
                        android:background="@null"
                        android:hint="退款原因"
                        android:paddingLeft="15dip"
                        android:textCursorDrawable="@drawable/editvew_cursor_drawble" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/common_down_arrow" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Text_Wrap_Black_Text"
                        android:layout_marginLeft="20dip"
                        android:layout_marginTop="10dip"
                        android:text="退款金额" />

                    <TextView
                        style="@style/Text_Wrap_Red_Text"
                        android:layout_marginTop="10dip"
                        android:text="*" />

                    <TextView
                        android:id="@+id/tvew_refund_money_show"
                        style="@style/Text_Wrap_Gray_Text_Sm"
                        android:layout_marginTop="10dip"
                        android:text="" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editvew_refund_total_show"
                    style="@style/EditText_Wrap_Black_Text"
                    android:layout_height="@dimen/refund_input_item_height"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/input_edit_bg"
                    android:hint="请输入退款金额"
                    android:paddingLeft="15dip"
                    android:textCursorDrawable="@drawable/editvew_cursor_drawble" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Text_Wrap_Black_Text"
                        android:layout_marginLeft="20dip"
                        android:layout_marginTop="10dip"
                        android:text="退款说明" />

                    <TextView
                        style="@style/Text_Wrap_Gray_Text_Sm"
                        android:layout_marginTop="10dip"
                        android:text="(可不填)" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editvew_refund_desc_show"
                    style="@style/EditText_Wrap_Black_Text"
                    android:layout_height="@dimen/refund_input_item_height"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/input_edit_bg"
                    android:hint="请输入退款说明"
                    android:paddingLeft="15dip"
                    android:textCursorDrawable="@drawable/editvew_cursor_drawble" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlayout_take_photo_click"
                android:layout_width="match_parent"
                android:layout_height="@dimen/refund_input_item_height"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/input_edit_bg"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageview1"
                    android:layout_width="40dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip" />

                <ImageView
                    android:id="@+id/imageview2"
                    android:layout_width="40dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/imageview1" />

                <ImageView
                    android:id="@+id/imageview3"
                    android:layout_width="40dip"
                    android:layout_height="30dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/imageview2" />

                <TextView
                    style="@style/Text_Wrap_Gray_Text"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dip"
                    android:text="上传凭证 最多3张" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvew_submit_click"
        style="@style/Btn_Submit"
        android:layout_alignParentBottom="true"
        android:text="提交" />

</RelativeLayout>