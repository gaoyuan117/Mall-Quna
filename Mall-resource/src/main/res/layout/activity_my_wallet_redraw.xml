<!-- 提现 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_marginTop="10dip"
        android:background="@color/white" >

        <EditText
            android:id="@+id/editvew_redraw_money_show"
            style="@style/EditText_Wrap_Black_Text"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:background="@null"
            android:hint="输入提现金额"
            android:textCursorDrawable="@drawable/editvew_cursor_drawble" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llayout_select_bankcard_click"
        android:layout_width="fill_parent"
        android:layout_height="65dip"
        android:layout_marginTop="10dip"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editvew_redraw_bank_name_show"
                style="@style/Text_Wrap_Black_Text"
                android:layout_marginLeft="15dip"
                android:text="请选择银行卡" />

            <TextView
                android:id="@+id/editvew_redraw_bank_num_show"
                style="@style/Text_Wrap_Gray_Text"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="5dip"
                android:visibility="gone"
                android:text="尾号1234" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvew_wallet_coupon_num_show"
            style="@style/Text_Wrap_Black_Text"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:drawablePadding="8dip"
            android:drawableRight="@drawable/common_right_arrow" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvew_submit_click"
        style="@style/Text_Wrap_White_Text"
        android:layout_width="match_parent"
        android:layout_margin="20dip"
        android:layout_marginTop="30dip"
        android:background="@color/red"
        android:paddingBottom="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="@dimen/margin_5"
        android:text="确认提现" />

</LinearLayout>