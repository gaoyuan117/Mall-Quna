<!-- 添加评价 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/llayout_title"
        layout="@layout/common_title_layout" />

    <ScrollView
        style="@style/Theme_Scrollbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llayout_title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:background="@drawable/white"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvew_order_name_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginTop="6dip"
                    android:drawablePadding="5dip"
                    android:drawableRight="@drawable/common_right_arrow"
                    android:text="AAAAAAAAAa"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_title3" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:background="@color/gray" />

                <LinearLayout
                    android:id="@+id/llayout_order_item"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_white"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/rlayout_action"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Text_Wrap_Black_Text"
                        android:layout_marginLeft="10dip"
                        android:drawablePadding="10dip"
                        android:text="选择评价：" />

                    <LinearLayout
                        android:id="@+id/llayout_review_best_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imgvew_review_best_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:background="@drawable/cart_option_on" />

                        <TextView
                            style="@style/Text_Wrap_Gray_Text"
                            android:drawableLeft="@drawable/pingjia01"
                            android:drawablePadding="2dip"
                            android:text="好评" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llayout_review_better_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imgvew_review_better_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:background="@drawable/cart_option" />

                        <TextView
                            android:id="@+id/tvew_review_better"
                            style="@style/Text_Wrap_Gray_Text"
                            android:drawableLeft="@drawable/pingjia02"
                            android:drawablePadding="2dip"
                            android:text="中评" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llayout_review_bad_click"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imgvew_review_bad_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:background="@drawable/cart_option" />

                        <TextView
                            android:id="@+id/tvew_review_bad"
                            style="@style/Text_Wrap_Gray_Text"
                            android:drawableLeft="@drawable/pingjia03"
                            android:drawablePadding="2dip"
                            android:text="差评" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" >

                    <EditText
                        android:id="@+id/editvew_desc_show"
                        style="@style/EditText_Wrap_Mulity_Black_Text"
                        android:layout_marginBottom="5dip"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="5dip"
                        android:background="@drawable/common_edit_bg"
                        android:gravity="left|top"
                        android:hint="写点什么吧"
                        android:minLines="4"
                        android:padding="5dip"
                        android:textCursorDrawable="@drawable/editvew_cursor_drawble" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="10dip"
                    android:paddingLeft="10dip"
                    android:paddingTop="5dip" >

                    <ImageView
                        android:id="@+id/imgvew_1"
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:background="@drawable/add_pic" />

                    <ImageView
                        android:id="@+id/imgvew_2"
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/add_pic" />

                    <ImageView
                        android:id="@+id/imgvew_3"
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/add_pic" />

                    <ImageView
                        android:id="@+id/imgvew_4"
                        android:layout_width="50dip"
                        android:layout_height="50dip"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/add_pic" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llayout_ratingbar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/Text_Wrap_Gray_Text"
                        android:layout_marginTop="10dip"
                        android:text="给店铺评分" />

                    <LinearLayout
                        android:id="@+id/restaurant_llayout_rating"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="描述相符"
                            android:textColor="@color/black"
                            android:textSize="14dip" />

                        <RatingBar
                            android:id="@+id/rating_real_show"
                            style="@style/addreviewRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="服务态度"
                            android:textColor="@color/black"
                            android:textSize="14dip" />

                        <RatingBar
                            android:id="@+id/rating_server_show"
                            style="@style/addreviewRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发货速度"
                            android:textColor="@color/black"
                            android:textSize="14dip" />

                        <RatingBar
                            android:id="@+id/rating_speed_show"
                            style="@style/addreviewRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="物流服务"
                            android:textColor="@color/black"
                            android:textSize="14dip" />

                        <RatingBar
                            android:id="@+id/rating_deliver_server_show"
                            style="@style/addreviewRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:numStars="5"
                            android:rating="5"
                            android:stepSize="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvew_submit_click"
        style="@style/Btn_Submit"
        android:layout_alignParentBottom="true"
        android:text="发表评价" />

</RelativeLayout>