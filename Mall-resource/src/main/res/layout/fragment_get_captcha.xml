<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rlayout_get_captcha"
    android:background="@drawable/identifying_code_btn"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_get_captcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="获取验证码"
            android:textColor="@color/red"
            android:textSize="@dimen/dimen_text" />

        <ProgressBar
            android:id="@+id/progressbar_review"
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/waiting_progress_bg"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>