<!-- 购物车 -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/find_pwd_rlayout_title"
            layout="@layout/common_title_layout"/>

        <EditText
            android:id="@+id/editvew_input_money"
            style="@style/EditText_Wrap_Black_Text"
            android:layout_marginTop="5dip"
            android:background="@color/white"
            android:hint="请输入充值金额"
            android:inputType="numberDecimal"
            android:paddingBottom="10dip"
            android:paddingLeft="20dip"
            android:paddingTop="10dip"
            android:textCursorDrawable="@drawable/editvew_cursor_drawble"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvew_amount_show"
            style="@style/Text_Wrap_Black_Text_Title2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:text="应支付："/>

        <TextView
            style="@style/Text_Wrap_Black_Text_Title3"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="30dip"
            android:text="支付方式"/>

        <LinearLayout
            android:id="@+id/rlayout_pay_limit_click"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/checkbox_pay_limit_show"
                style="@style/common_checkbox"
                android:layout_marginLeft="15dip"/>

            <TextView
                android:id="@+id/textView3"
                style="@style/Text_Wrap_Black_Text"
                android:layout_marginLeft="15dip"
                android:text="积分支付"/>

            <TextView
                android:id="@+id/tvew_wallet_blance_show"
                style="@style/Text_Wrap_Gray_Text_Sm"
                android:layout_marginLeft="15dip"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlayout_pay_zhifb_click"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginTop="0.5dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_pay_zhifb_show"
                style="@style/common_checkbox"
                android:layout_marginLeft="15dip"/>

            <TextView
                style="@style/Text_Wrap_Black_Text"
                android:layout_marginLeft="15dip"
                android:text="支付宝支付"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlayout_pay_weixin_click"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginTop="0.5dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_pay_weixin_show"
                style="@style/common_checkbox"
                android:layout_marginLeft="15dip"/>

            <TextView
                style="@style/Text_Wrap_Black_Text"
                android:layout_marginLeft="15dip"
                android:text="微信支付"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rlayout_pay_yinlian_click"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginTop="0.5dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <CheckBox
                android:id="@+id/checkbox_pay_yinlian_show"
                style="@style/common_checkbox"
                android:layout_marginLeft="15dip"/>

            <TextView
                style="@style/Text_Wrap_Black_Text"
                android:layout_marginLeft="15dip"
                android:text="银联支付"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvew_settle_show"
            style="@style/Btn_Wrap_White_Text_Title3"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:layout_margin="30dip"
            android:background="@color/red"
            android:text="确认支付"/>

    </LinearLayout>

    <include layout="@layout/common_waiting_layout"/>

</RelativeLayout>