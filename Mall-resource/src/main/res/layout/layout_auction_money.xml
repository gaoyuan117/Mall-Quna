
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dip"
    android:paddingTop="8dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            style="@style/Text_Wrap_Black_Text_Title3"
            android:text="竞拍价格" />

        <EditText
            android:id="@+id/editvew_money_show"
            style="@style/EditText_Wrap_Black_Text"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="15dip"
            android:paddingTop="12dip"
            android:paddingBottom="12dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:inputType="numberDecimal"
            android:background="@drawable/common_edit_bg"
            android:hint="请输入竞拍价格"
            android:singleLine="true"
            android:textColorHint="#d7d3cf"
            android:textCursorDrawable="@drawable/editvew_cursor_drawble" />

    </LinearLayout>

</RelativeLayout>