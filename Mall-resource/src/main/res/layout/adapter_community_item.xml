<!-- 社区列表项 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:background="@drawable/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/llayout_head_picture"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imgvew_head_picture_show"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvew_review_name_show"
                style="@style/Text_Wrap_Black_Text"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/llayout_head_picture"
                android:text="AAAAAAAAAAaa" />

            <TextView
                android:id="@+id/tvew_review_time_show"
                style="@style/Text_Wrap_Gray_Text_Sm"
                android:layout_below="@+id/tvew_review_name_show"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/llayout_head_picture"
                android:text="2013.12.19 11:11:11" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvew_review_desc_show"
            style="@style/Text_Wrap_Black_Text"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:text="AAAAAAAAAAaa" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/community_item_image_height"
            android:layout_margin="10dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgvew_photo1_show"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/imgvew_photo2_show"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:id="@+id/imgvew_photo3_show"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>