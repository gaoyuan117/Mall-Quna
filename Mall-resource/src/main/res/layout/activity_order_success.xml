<!-- 分类 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_layout"
        layout="@layout/common_title_layout" />

    <LinearLayout
        android:id="@+id/flayout_cart"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@+id/top_layout" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:drawableTop="@drawable/icon42"
            android:drawablePadding="@dimen/margin_20"
            style="@style/Text_Wrap_Black_Text_Title2"
            android:text="恭喜您支付成功"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/btn_back_to_me_click"
                android:layout_width="120dp"
                android:layout_height="34dp"
                style="@style/Btn_Submit"
                android:text="个人中心"/>

            <Button
                android:id="@+id/btn_back_to_home_click"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                style="@style/Btn_Submit"
                android:text="返回首页"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>