<!-- 意见反馈 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:background="@color/gray_white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editvew_price_start_show"
                style="@style/EditText_Wrap_Black_Title3"
                android:inputType="numberDecimal"
                android:hint="请输入最低价格" />

            <TextView
                style="@style/Text_Wrap_Gray_Text_Sm"
                android:layout_marginTop="3dip"
                android:text="最低价格" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:layout_marginBottom="40dip"
        android:background="@color/gray_white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editvew_price_end_show"
                style="@style/EditText_Wrap_Black_Title3"
                android:inputType="numberDecimal"
                android:hint="请输入最高价格" />

            <TextView
                style="@style/Text_Wrap_Gray_Text_Sm"
                android:layout_marginTop="3dip"
                android:text="最高价格" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvew_submit_click"
        style="@style/Text_Wrap_White_Text_Title3"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_margin="20dip"
        android:background="@color/red"
        android:text="完成" />

</LinearLayout>