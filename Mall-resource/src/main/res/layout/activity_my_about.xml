<!-- 关于 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <RelativeLayout
        android:id="@+id/rlayout_my_update_click"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/common_write_btn_bg_selector" >

        <TextView
            style="@style/Btn_Wrap_Black_Text_Title2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:drawablePadding="8dip"
            android:text="新版本检测" />

        <TextView
            android:id="@+id/tvew_version_show"
            style="@style/Text_Wrap_Gray_Text_Sm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawablePadding="8dip"
            android:text="已是最新版本" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_my_help_click"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/common_write_btn_bg_selector" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray" />

        <TextView
            style="@style/Btn_Wrap_Black_Text_Title2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:drawablePadding="8dip"
            android:text="帮助中心" />

        <TextView
            style="@style/Text_Wrap_Gray_Text_Sm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawablePadding="8dip"
            android:drawableRight="@drawable/common_right_arrow"
            android:text="" />
    </RelativeLayout>


</LinearLayout>