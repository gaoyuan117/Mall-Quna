<!-- 抢购会列表项 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:padding="5dip"
        android:background="@drawable/white" >

        <ImageView
            android:id="@+id/imgvew_photo_show"
            android:layout_width="@dimen/image_height_small_middle"
            android:layout_height="@dimen/image_height_small_middle"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_empty_logo_small" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/imgvew_photo_show" >

            <TextView
                android:id="@+id/tvew_product_name_show"
                style="@style/Text_Wrap_Black_Text"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="兰花基底"
                />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="40dip" >

                <TextView
                    android:id="@+id/tvew_product_now_price_show"
                    style="@style/Text_Wrap_Red_Text"
                    android:layout_centerVertical="true"
                    android:text="" />

                <TextView
                    android:id="@+id/tvew_product_origin_price_show"
                    style="@style/Text_Wrap_Gray_Text_Sm"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:layout_toRightOf="@+id/tvew_product_now_price_show"
                    android:text="" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvew_product_get_show"
                        style="@style/Text_Wrap_Red_Text"
                        android:layout_width="70dip"
                        android:layout_height="30dip"
                        android:background="@drawable/bg_qiang"
                        android:text="马上抢" />

                    <TextView
                        android:id="@+id/tvew_product_sales_show"
                        style="@style/Text_Wrap_Gray_Text_Sm"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dip"
                        android:text="已抢11件" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>