<!-- 关于 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/common_title_layout" />

    <RelativeLayout
        android:id="@+id/rlayout_my_account_click"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/common_write_btn_bg_selector" >

        <TextView
            style="@style/Btn_Wrap_Black_Text_Title3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:drawablePadding="8dip"
            android:text="会员名" />

        <TextView
            android:id="@+id/tvew_account_name_show"
            style="@style/Text_Wrap_Gray_Text_Sm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawablePadding="8dip"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_my_phone_click"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/common_write_btn_bg_selector" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray" />

        <TextView
            style="@style/Btn_Wrap_Black_Text_Title3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:drawablePadding="8dip"
            android:text="修改手机号码" />

        <TextView
            android:id="@+id/tvew_my_phone_show"
            style="@style/Text_Wrap_Gray_Text_Sm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawablePadding="8dip"
            android:drawableRight="@drawable/common_right_arrow"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlayout_my_password_click"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@drawable/common_write_btn_bg_selector" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/gray" />

        <TextView
            style="@style/Btn_Wrap_Black_Text_Title3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:drawablePadding="8dip"
            android:text="修改登录密码" />

        <TextView
            style="@style/Text_Wrap_Gray_Text_Sm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawablePadding="8dip"
            android:drawableRight="@drawable/common_right_arrow"
             />
    </RelativeLayout>

</LinearLayout>