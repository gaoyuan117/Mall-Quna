<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_demand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F3F3"
    tools:context="com.android.juzbao.activity.circle.SendDemandActivity">
    <include layout="@layout/layout_title"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的需求："
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/et_send_demand_need"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColorHint="#B5B5B5"
            android:hint="输入你的需求"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需求人数："
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <EditText
            android:layout_weight="1"
            android:id="@+id/et_send_demand_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLength="3"
            android:inputType="number"
            android:hint="输入你的需求人数"
            android:textColorHint="#B5B5B5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="人"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期限："
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/et_send_demand_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:inputType="number"
            android:maxLength="3"
            android:hint="需求的有效期(天)"
            android:textColorHint="#B5B5B5"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情描述："
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/et_send_demand_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="需求说明越详细，应邀的人越多。"
            android:textColorHint="#B5B5B5"
            android:maxLength="20"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="邀约"
        android:textColor="@color/orange2"
        android:textSize="16sp"
        android:drawableLeft="@drawable/demand"
        android:drawablePadding="8dp"
        android:paddingLeft="8dp"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀约地点："
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <EditText
            android:id="@+id/et_send_demand_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入邀约地点，需要是公共场所"
            android:textColorHint="#B5B5B5"
            android:maxLength="20"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="愿付酬金："
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <EditText
            android:layout_weight="1"
            android:id="@+id/et_send_demand_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:maxLength="7"
            android:inputType="number"
            android:hint="填写需求金额"
            android:textColorHint="#B5B5B5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="元/人"/>
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发起需求"
        android:id="@+id/bt_send_demand_ok"
        android:background="@color/orange2"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        />


</LinearLayout>
