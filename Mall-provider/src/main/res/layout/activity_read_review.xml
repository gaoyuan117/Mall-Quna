<!-- 添加评价 -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/llayout_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/common_bg"
                android:orientation="vertical"
                android:visibility="invisible">

                <include layout="@layout/common_title_layout"/>

                <include layout="@layout/common_waiting_layout"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dip"
                        android:paddingTop="6dip">

                        <TextView
                            android:id="@+id/tvew_order_name_show"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:drawablePadding="5dip"
                            android:drawableRight="@drawable/common_right_arrow"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_title3"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/gray"/>

                    <LinearLayout
                        android:id="@+id/llayout_order_item"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/gray_white"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rlayout_action"
                        android:layout_width="fill_parent"
                        android:layout_height="45dip"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/Text_Wrap_Black_Text"
                            android:layout_marginLeft="10dip"
                            android:drawablePadding="10dip"
                            android:text="综合评价："/>

                        <TextView
                            android:id="@+id/tvew_review_better"
                            style="@style/Text_Wrap_Gray_Text"
                            android:drawableLeft="@drawable/pingjia02"
                            android:drawablePadding="2dip"
                            android:text="中评"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/tvew_review_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="7dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="12dp"
                        android:gravity="top|left"
                        android:text=""
                        android:background="@drawable/white"
                        android:textColor="#bb333333"
                        android:textSize="14sp"
                        />

                    <LinearLayout
                        android:id="@+id/llayout_review_message"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white"
                        android:orientation="vertical"
                        >
                        <!--<EditText-->
                        <!--style="@style/EditText_Wrap_Mulity_Black_Text"-->
                        <!--android:layout_marginBottom="5dip"-->
                        <!--android:layout_marginLeft="10dip"-->
                        <!--android:layout_marginRight="10dip"-->
                        <!--android:layout_marginTop="5dip"-->
                        <!--android:background="@drawable/common_edit_bg"-->
                        <!--android:gravity="left|top"-->
                        <!--android:hint="写点什么吧"-->
                        <!--android:minLines="4"-->
                        <!--android:padding="5dip"-->
                        <!--android:textCursorDrawable="@drawable/editvew_cursor_drawble" />-->
                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:background="@color/gray"/>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingBottom="10dip"
                        android:paddingLeft="10dip"
                        android:paddingTop="10dip">

                        <ImageView
                            android:id="@+id/imgvew_1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/add_pic"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/imgvew_2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="5dip"
                            android:background="@drawable/add_pic"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/imgvew_3"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="5dip"
                            android:background="@drawable/add_pic"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/imgvew_4"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="5dip"
                            android:background="@drawable/add_pic"
                            android:visibility="gone"/>

                        <!--<ImageView-->
                        <!--android:layout_width="60dip"-->
                        <!--android:layout_height="60dip" />-->

                        <!--<ImageView-->
                        <!--android:layout_width="60dip"-->
                        <!--android:layout_height="60dip"-->
                        <!--android:layout_marginLeft="5dip" />-->

                        <!--<ImageView-->
                        <!--android:layout_width="60dip"-->
                        <!--android:layout_height="60dip"-->
                        <!--android:layout_marginLeft="5dip" />-->

                        <!--<ImageView-->
                        <!--android:layout_width="60dip"-->
                        <!--android:layout_height="60dip"-->
                        <!--android:layout_marginLeft="5dip" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text_Wrap_Gray_Text"
                            android:layout_marginTop="10dip"
                            android:text="给店铺评分："/>

                        <LinearLayout
                            android:id="@+id/restaurant_llayout_rating"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="描述相符："
                                android:textColor="@color/black"
                                android:textSize="14dip"/>

                            <TextView
                                android:id="@+id/tvew_real_show"
                                style="@style/Text_Wrap_Black_Text_Title2"
                                android:layout_marginLeft="20dip"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="服务态度："
                                android:textColor="@color/black"
                                android:textSize="14dip"/>

                            <TextView
                                android:id="@+id/tvew_server_show"
                                style="@style/Text_Wrap_Black_Text_Title2"
                                android:layout_marginLeft="20dip"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="发货速度："
                                android:textColor="@color/black"
                                android:textSize="14dip"/>

                            <TextView
                                android:id="@+id/tvew_speed_show"
                                style="@style/Text_Wrap_Black_Text_Title2"
                                android:layout_marginLeft="20dip"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="15dip"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="物流服务："
                                android:textColor="@color/black"
                                android:textSize="14dip"/>

                            <TextView
                                android:id="@+id/tvew_deliver_server_show"
                                style="@style/Text_Wrap_Black_Text_Title2"
                                android:layout_marginLeft="20dip"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    />

                <Button
                    android:id="@+id/btn_review_click"
                    style="@style/Btn_Submit"
                    android:text="追加评论"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>