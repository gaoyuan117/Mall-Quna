<!-- 发布宝贝 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <!-- 标题 -->

    <include
        android:id="@+id/release_layout_title"
        layout="@layout/common_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/llayout_release_goods_one_click"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:contentDescription="@string/app_name"
                android:src="@drawable/fb_icon01" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="发布商品"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_release_goods_two_click"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:contentDescription="@string/app_name"
                android:src="@drawable/fb_icon02" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="发布拍品"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_release_goods_three_click"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:contentDescription="@string/app_name"
                android:src="@drawable/fb_icon03" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="发布定制商品"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>