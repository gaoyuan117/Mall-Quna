<!-- 服务大厅 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 标题 -->

    <include
        android:id="@+id/serve_hall_layout_title"
        layout="@layout/common_title_layout" />

    <LinearLayout 
        android:id="@+id/llayout_serve_hall_online_click"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        style="@style/MyGoodsStyle"
        android:gravity="center_vertical"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_title3"
            android:textColor="@color/black"
            android:text="在线客服"
            />
        <View 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:visibility="invisible"
            />
        <TextView
            style="@style/Text_Wrap_Black_Text"
            android:text="点击联系" 
            />
        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_right_arrow"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    
   <LinearLayout 
        android:id="@+id/llayout_serve_hall_call_click"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        style="@style/MyGoodsStyle"
        android:gravity="center_vertical"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_title3"
            android:textColor="@color/black"
            android:text="联系客服"
            />

        <View 
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tvew_serve_hall_phone_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="@dimen/dimen_text"
            android:singleLine="true"
            android:text="15689788825"
            />

    </LinearLayout>
</LinearLayout>
