<!-- 店铺设置 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题 -->

    <include
        android:id="@+id/shop_set_layout_title"
        layout="@layout/common_title_layout" />

    <LinearLayout
        android:id="@+id/llayout_shop_set_shopicon_click"
        style="@style/MyGoodsStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺头像"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_title3" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <com.android.zcomponent.views.CircleImageView
            android:id="@+id/ivew_shop_set_shopicon_show"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/dp_logo"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/common_right_arrow"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@color/gray_white" />

    <LinearLayout
        android:id="@+id/llayout_shop_fitment_signboard_click"
        style="@style/MyGoodsStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/Text_Wrap_Gray_Title3"
            android:text="店铺招牌" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivew_shop_fitment_signboard_show"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:background="@color/red"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/common_right_arrow"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@color/gray_white" />

    <LinearLayout
        android:id="@+id/llayout_shop_set_shopname_click"
        style="@style/MyGoodsStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺名称"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_title3" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvew_shop_set_shopname_show"
            style="@style/Text_Wrap_Gray_Text"
            android:text="" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/common_right_arrow"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@color/gray_white" />

    <LinearLayout
        android:id="@+id/llayout_shop_set_shopintroduce_click"
        style="@style/MyGoodsStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺介绍"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_title3" />

        <TextView
            android:id="@+id/tvew_shop_set_shopintroduce_show"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/common_right_arrow"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_shop_save_click"
        style="@style/Btn_Submit"
        android:text="确认" />

</LinearLayout>