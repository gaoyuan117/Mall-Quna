<!-- 我的购买订单列表项 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="right"
              android:layout_marginBottom="8dip"
              android:layout_marginRight="5dip"
              android:layout_marginTop="8dip"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/tvew_order_pay_show_click"
        style="@style/Text_Wrap_Red_Text_Title3"
        android:layout_marginRight="5dip"
        android:text="等待买家支付"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvew_order_send_show_click"
        style="@style/OrderAction"
        android:text="发货"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvew_order_receiving_show_click"
        style="@style/OrderAction"
        android:text="待收货"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvew_order_received_show_click"
        style="@style/OrderAction"
        android:text="已收货"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvew_order_refuse_refund_show_click"
        style="@style/OrderAction"
        android:text="拒绝退款"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvew_order_refund_show_click"
        style="@style/OrderAction"
        android:text="确认退款"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvew_order_delivery_show_click"
        style="@style/OrderAction"
        android:text="查看物流"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvew_order_del_show_click"
        style="@style/OrderAction"
        android:text="删除订单"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvew_order_detail_show_click"
        style="@style/OrderAction"
        android:text="查看详情"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvew_order_review_show_click"
        style="@style/OrderAction"
        android:text="查看评价"
        android:visibility="gone"/>
</LinearLayout>