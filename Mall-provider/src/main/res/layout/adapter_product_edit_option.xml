<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/llayout_option_bg_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dip"
        android:background="@drawable/common_round_gray_bg">

        <TextView
            android:id="@+id/tvew_option_title_show"
            style="@style/Text_Wrap_Black_Text_Sm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvew_option_del_show"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:minHeight="32dip"
            android:minWidth="60dip"
            />

        <TextView
            android:id="@+id/tvew_option_del_show"
            style="@style/Text_Wrap_Black_Text_Sm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/clear_click"
            android:minHeight="22dip"
            android:minWidth="22dip"
            />
    </RelativeLayout>

</LinearLayout>