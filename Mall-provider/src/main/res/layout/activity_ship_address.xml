<!-- 选择发货地址 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题 -->

    <include
        android:id="@+id/ship_address_layout_title"
        layout="@layout/common_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:background="@color/whitesmoke"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            style="@style/Text_Wrap_Black_Text"
            android:text="国家" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvew_ship_address_counytry_show"
            style="@style/Text_Wrap_Black_Text"
            android:text="中国" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/whitesmoke"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            style="@style/Text_Wrap_Black_Text"
            android:text="省份" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvew_ship_address_province_show"
            style="@style/Text_Wrap_Black_Text"
            android:text="请选择" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/whitesmoke"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            style="@style/Text_Wrap_Black_Text"
            android:text="城市" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvew_ship_address_city_show"
            style="@style/Text_Wrap_Black_Text"
            android:text="请选择" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvew_ship_address_add_picture_click"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="添加图片"
            android:textColor="@color/gray"
            android:textSize="@dimen/dimen_text" />

        <TextView
            android:id="@+id/tvew_ship_address_ok_click"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_text" />
    </LinearLayout>

</LinearLayout>